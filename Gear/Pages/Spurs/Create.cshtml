@page
@model Gear.Pages.Spurs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Расчёт цилиндрической передачи</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Spur.Name" class="control-label">Наименование редуктора</label>
                <input asp-for="Spur.Name" class="form-control" />
                <span asp-validation-for="Spur.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.Mn" class="control-label">Модуль, мм</label>
                <select asp-for="Spur.Mn" class="form-control" id="m">
                    <option value="0.5">0.5</option>
                    <option value="0.55">0.55</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                    <option value="1.125">1.125</option>
                    <option value="1.25">1.25</option>
                    <option value="1.375">1.375</option>
                    <option value="1.5">1.5</option>
                    <option value="1.75">1.75</option>
                    <option value="2">2</option>
                    <option value="2.25">2.25</option>
                    <option value="2.5">2.5</option>
                    <option value="3">3</option>
                    <option value="3.5">3.5</option>
                    <option value="4">4</option>
                    <option value="4.5">4.5</option>
                    <option value="5">5</option>
                    <option value="5.5">5.5</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="Spur.Mn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.Aw" class="control-label">Межосевое расстояние, мм</label>
                <input type="number" step="0.01" asp-for="Spur.Aw" class="form-control" id="a" />
                <span asp-validation-for="Spur.Aw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.Z1" class="control-label">Количество зубьев ведущей шестерни</label>
                <input asp-for="Spur.Z1" class="form-control" id="z1" />
                <span asp-validation-for="Spur.Z1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.Z2" class="control-label">Количество зубьев ведомого колеса</label>
                <input asp-for="Spur.Z2" class="form-control" id="z2" />
                <span asp-validation-for="Spur.Z2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.B1" class="control-label">Ширина зубчатого венца шестерни, мм</label>
                <input asp-for="Spur.B1" class="form-control" />
                <span asp-validation-for="Spur.B1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spur.B2" class="control-label">Ширина зубчатого венца колеса, мм</label>
                <input asp-for="Spur.B2" class="form-control" />
                <span asp-validation-for="Spur.B2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a type="button" class="btn btn-primary" asp-page="Index">Назад</a>
            </div>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2 m-1">
        <img class="d-block w-100" src="~/images/Schema.png" alt="Схема зацепления" />
        <p>
            Основополагающим документом, устанавливающим применяемые в науке, технике и производстве термины, определения
            и обозначения понятий, относящихся к геометрии и кинематике цилиндрических зубчатых
            передач с постоянным передаточным отношением, является ГОСТ 16531-83.
        </p>
        <p>
            Угол наклона линии зуба β = arccos(m·(z1+z2)/2·a)<br />
            Делительный диаметр d = m·z<br />
            Диаметр вершин зубьев шестерни (колеса) da = d + m·z<br />
            Диаметр впадин зубьев шестерни (колеса) df = d - 2·(0.25 + m)<br />
            Постоянная хорда Sc = 0.5·π·cos^2(20)<br />
            Высота до постоянной хорды h = 0.5·(da-d-Sc)·tg(20).
            <hr />
            где:<br />
            m - модуль зубчатого соединения;<br />
            z1, z2 - количество зубьев шестерни и колеса соответственно;<br />
            a - межосевое расстояние.<br />
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
