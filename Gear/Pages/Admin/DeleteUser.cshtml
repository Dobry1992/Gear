@page
@model Gear.Pages.Admin.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<h1>Удаление</h1>
<h3>Вы уверены, что желаете удалить данного пользователя <span class="text-danger">@Html.DisplayFor(model => model.User.UserName)</span>?</h3>
<form method="post">
    <input type="hidden" asp-for="User.Id" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
    <a class="btn btn-primary" asp-page="./Index">Назад</a>
</form>