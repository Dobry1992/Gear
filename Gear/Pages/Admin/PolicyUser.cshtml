@page
@model Gear.Pages.Admin.PolicyUserModel
@{
    ViewData["Title"] = "Policy User";
}

<h3>Пользователь <span class="text-danger">@Model.User.UserName</span> имеет роль <span class="text-danger">@Model.UserRole.FirstOrDefault()</span></h3>
<h4>Назначить роль пользователю <span class="text-danger">@Model.User.UserName</span>?</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <select asp-for="RName" class="form-control">
                    @foreach (var item in Model.RoleName)
                    {
                        <option value="@item.NormalizedName.ToString()">@item.Name.ToString()</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a class="btn btn-primary" asp-page="./Index">Назад</a>
        </form>
    </div>
</div>

