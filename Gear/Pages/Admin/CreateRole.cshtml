@page
@model Gear.Pages.Admin.CreateRoleModel
@{
    ViewData["Title"] = "Create Role";
}
<h1>Создать роль</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role.Name" class="control-label">Имя роли</label>
                <input asp-for="Role.Name" class="form-control" />
                <span asp-validation-for="Role.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index">Назад</a>
            </div>
        </form>
    </div>
</div>